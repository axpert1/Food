<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/bordrecolor"
                    android:orientation="horizontal">

                    <com.anilxpert.food.custom_class.EditTextViewRegular
                        android:id="@+id/edtFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="First Name"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:minHeight="@dimen/dp_40"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:background="@drawable/bordrecolor"
                    android:gravity="right"

                    android:weightSum="1">

                    <com.anilxpert.food.custom_class.EditTextViewRegular
                        android:id="@+id/edtLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Last Name"
                        android:inputType="textCapSentences"

                        android:maxLines="1"
                        android:minHeight="@dimen/dp_40"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bordrecolor">

                <com.anilxpert.food.custom_class.EditTextViewRegular
                    android:id="@+id/edtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:minHeight="@dimen/dp_40"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bordrecolor">

                <com.anilxpert.food.custom_class.EditTextViewRegular
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:minHeight="@dimen/dp_40"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bordrecolor">

                <com.anilxpert.food.custom_class.EditTextViewRegular
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:minHeight="@dimen/dp_40"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>


            <com.anilxpert.food.custom_class.RippleViewButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/btnRed"
                android:gravity="center"
                android:minHeight="@dimen/dp_40"
                android:text="@string/n_register"
                android:textColor="@color/txtWhite" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/capture" />


            <com.anilxpert.food.custom_class.RippleViewButton
                android:id="@+id/btnFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3b5998"
                android:gravity="center"
                android:minHeight="@dimen/dp_40"
                android:text="Connect with Facebook"
                android:textColor="@color/txtWhite" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.anilxpert.food.custom_class.TextViewRegular
                android:id="@+id/alredy_have_account_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Already have a account?"
                android:textAlignment="center" />

            <com.anilxpert.food.custom_class.RippleViewButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbutton_border"
                android:gravity="center"
                android:minHeight="@dimen/dp_40"
                android:text="@string/str_sign_in"
                android:textColor="@color/btnRed" />


        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>